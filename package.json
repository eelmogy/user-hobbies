    "morgan": "^1.9.1",
    "nodemailer": "^6.4.2",
    "request": "^2.88.0",
    "swagger-ui-express": "^4.1.3"
  },
  "devDependencies": {
    "@types/async": "^3.0.7",
    "@types/bcrypt-nodejs": "0.0.30",
